@using NPD.Workflow.Models.NPD
@using NPD.CommonDataContract

@model NPDCumulativeSalesProjection
@{
    List<MasterDataItem> cumulativelist = new List<MasterDataItem>();
    cumulativelist.Add(new MasterDataItem("6 months", "6 months"));
    cumulativelist.Add(new MasterDataItem("12 months", "12 months"));
    cumulativelist.Add(new MasterDataItem("24 months", "24 months"));
    //cumulativelist.Add(new MasterDataItem("36 months", "36 months"));
}

<div class="modal fade" id="addeditCumulativeSalesProjectionModel" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">
                    @if (Model.Index > 0)
                    {
                        <span>
                            @Html.ResourceValue("Popup_Title_EditCumulativeSalesProjection", ResourceNames.NPD)
                        </span>
                    }
                    else
                    {
                        <span>
                            @Html.ResourceValue("Popup_Title_AddCumulativeSalesProjection", ResourceNames.NPD)
                        </span>
                    }
                </h4>
            </div>
            @using (Ajax.BeginForm("SaveCumulativeSalesProjection", "NPD", new AjaxOptions
            {
                HttpMethod = "POST",
                LoadingElementId = "loading",
                OnFailure = "OnFailure",
                OnSuccess = "OnCumulativeSalesProjectionaddSuccess",
                OnBegin = "BeginClient"
            }, new { enctype = "multipart/form-data", id = "frmCumulativeSalesProjection" }))
            {
                //@Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.RequestBy)
                @Html.HiddenFor(m => m.RequestDate)
                @Html.HiddenFor(m => m.RequestID)
                @Html.HiddenFor(m => m.ID)
                @Html.HiddenFor(m => m.Index)
                @Html.HiddenFor(m => m.ItemAction)
                <div class="modal-body form-horizontal">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="Objective" class="col-md-4 control-label">
                                    <span class="text-danger text-default-light">*</span>
                                    @Html.Label("Periods", ResourceNames.NPD)
                                </label>
                                <div class="col-md-8 ">
                                    @Html.DropDownListFor(m => m.Periods, new SelectList(cumulativelist, "Title", "Value"), "Select", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Periods, ResourceNames.NPD)
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="DesiredResult" class="col-md-4 control-label">
                                    <span class="text-danger text-default-light">*</span>
                                    @Html.Label("Value", ResourceNames.NPD)
                                </label>
                                <div class="col-md-8 ">
                                    @Html.TextBoxFor(m => m.Value, new { maxLength = 15, @class = "form-control numberonly fixedtwodecimal" })
                                    @Html.ValidationMessageFor(m => m.Value, ResourceNames.NPD)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="DesiredResult" class="col-md-4 control-label">
                                    <spa class="text-danger text-default-light">*</spa>
                                    @Html.Label("DesiredThroughput", ResourceNames.NPD)
                                </label>
                                <div class="col-md-8 ">
                                    @Html.TextBoxFor(m => m.DesiredThroughput, new { maxLength = 15, @class = "form-control numberonly fixedtwodecimal" })
                                    @Html.ValidationMessageFor(m => m.DesiredThroughput, ResourceNames.NPD)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="DesiredResult" class="col-md-4 control-label">
                                    <spa class="text-danger text-default-light">*</spa>
                                    @Html.Label("BusinessSaliency", ResourceNames.NPD)
                                </label>
                                <div class="col-md-8 ">
                                    @Html.TextBoxFor(m => m.BusinessSaliency, new { maxLength = 15, @class = "form-control numberonly fixedtwodecimal" })
                                    @Html.ValidationMessageFor(m => m.BusinessSaliency, ResourceNames.NPD)
                                </div>
                            </div>
                        </div>
                    </div>
                 

                </div>


                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="OnModelSubmit(this.form.id)">@Html.ResourceValue("Button_Text_Save", ResourceNames.Common)</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        @Html.ResourceValue("Button_Text_Close", ResourceNames.Common)
                    </button>
                </div>
            }
        </div>

    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#addeditCumulativeSalesProjectionModel").modal().on('shown.bs.modal', function () {
            BindValidation();
            $.validator.unobtrusive.parsePopup("#addeditCumulativeSalesProjectionModel");

        });
    });
</script>



