@using NPD.Workflow.Models.NPD
@using NPD.CommonDataContract

@model NPDTargetRLP


<div class="modal fade" id="addeditTargetRLP" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">
                    @if (Model.Index > 0)
                    {
                        <span>
                            @Html.ResourceValue("Popup_Title_EditTargetRLP", ResourceNames.NPD)
                        </span>
                    }
                    else
                    {
                        <span>
                            @Html.ResourceValue("Popup_Title_AddTargetRLP", ResourceNames.NPD)
                        </span>
                    }
                </h4>
            </div>
            @using (Ajax.BeginForm("SaveTargetRLP", "NPD", new AjaxOptions
            {
                HttpMethod = "POST",
                LoadingElementId = "loading",
                OnFailure = "OnFailure",
                OnSuccess = "OnTargetRLPaddSuccess",
                OnBegin = "BeginClient"
            }, new { enctype = "multipart/form-data", id = "frmTargetRLP" }))
            {
                //@Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.RequestBy)
                @Html.HiddenFor(m => m.RequestDate)
                @Html.HiddenFor(m => m.RequestID)
                @Html.HiddenFor(m => m.ID)
                @Html.HiddenFor(m => m.Index)
                @Html.HiddenFor(m => m.ItemAction)
                <div class="modal-body form-horizontal">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="Objective" class="col-md-4 control-label">
                                    <span class="text-danger text-default-light">*</span>
                                    @Html.Label("TargetRLP", ResourceNames.NPD)
                                </label>
                                <div class="col-md-8 ">
                                    @Html.TextBoxFor(m => m.TargetRLP, new { maxLength = 15, @class = "form-control numberonly fixedtwodecimal" })
                                    @Html.ValidationMessageFor(m => m.TargetRLP, ResourceNames.NPD)
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="DesiredResult" class="col-md-4 control-label">
                                    <span class="text-danger text-default-light">*</span>
                                    @Html.Label("TargetTransferPrice", ResourceNames.NPD)
                                </label>
                                <div class="col-md-8 ">
                                    @Html.TextBoxFor(m => m.TargetTransferPrice, new { maxLength = 15, @class = "form-control numberonly fixedtwodecimal" })
                                    @Html.ValidationMessageFor(m => m.TargetTransferPrice, ResourceNames.NPD)
                                </div>
                            </div>
                        </div>
                    </div>
                
                 

                </div>


                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="OnModelSubmit(this.form.id)">@Html.ResourceValue("Button_Text_Save", ResourceNames.Common)</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        @Html.ResourceValue("Button_Text_Close", ResourceNames.Common)
                    </button>
                </div>
            }
        </div>

    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#addeditTargetRLP").modal().on('shown.bs.modal', function () {
            BindValidation();
            $.validator.unobtrusive.parsePopup("#addeditTargetRLP");

        });
    });
</script>



