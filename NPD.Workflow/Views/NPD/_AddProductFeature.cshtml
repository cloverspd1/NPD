@using NPD.Workflow.Models.NPD
@using NPD.CommonDataContract

@model NPDProductFeature
@{
    List<MasterDataItem> productFeatureList = new List<MasterDataItem>();
    productFeatureList.Add(new MasterDataItem("Should have(Mandatory)", "Should have"));
    productFeatureList.Add(new MasterDataItem("Could have(Preferred but not mandatory)", "Could have"));
    productFeatureList.Add(new MasterDataItem("Should not have", "Should not have"));
}
<div class="modal fade" id="addeditProductFeatureModel" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">
                    @if (Model.Index > 0)
                    {
                        <span>
                            @Html.ResourceValue("Popup_Title_EditProductFeature", ResourceNames.NPD)
                        </span>
                    }
                    else
                    {
                        <span>
                            @Html.ResourceValue("Popup_Title_AddProductFeature", ResourceNames.NPD)
                        </span>
                    }
                </h4>
            </div>
            @using (Ajax.BeginForm("SaveProductFeature", "DCR", new AjaxOptions
            {
                HttpMethod = "POST",
                LoadingElementId = "loading",
                OnFailure = "OnFailure",
                OnSuccess = "OnProductFeatureaddSuccess",
                OnBegin = "BeginClient"
            }, new { enctype = "multipart/form-data", id = "frmSaveProductFeature" }))
            {
                //@Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.RequestBy)
                @Html.HiddenFor(m => m.RequestDate)
                @Html.HiddenFor(m => m.RequestID)
                @Html.HiddenFor(m => m.ID)
                @Html.HiddenFor(m => m.Index)
                @Html.HiddenFor(m => m.ItemAction)
                <div class="modal-body form-horizontal">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="Objective" class="col-md-4 control-label">
                                    <span class="text-danger text-default-light">*</span>
                                    @Html.Label("ProductFeature", ResourceNames.NPD)
                                </label>
                                <div class="col-md-8 ">
                                    @Html.DropDownListFor(m => m.ProductFeature, new SelectList(productFeatureList, "Title","Value"), "Select", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.ProductFeature, ResourceNames.NPD)
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="DesiredResult" class="col-md-4 control-label">
                                    <span class="text-danger text-default-light">*</span>
                                    @Html.LabelFor(m => m.BajajBrand, ResourceNames.NPD)
                                </label>
                                <div class="col-md-8 ">
                                    @Html.TextBoxFor(m => m.BajajBrand, new { maxLength = 150,data_toggle = "tooltip",  title = "Max 150 characters",@class = "form-control " })
                                    @Html.ValidationMessageFor(m => m.BajajBrand, ResourceNames.NPD)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="DesiredResult" class="col-md-4 control-label">
                                    <spa class="text-danger text-default-light">*</spa>
                                    @Html.LabelFor(m => m.ReferenceBrand, ResourceNames.NPD)
                                </label>
                                <div class="col-md-8 ">
                                    @Html.TextBoxFor(m => m.ReferenceBrand, new { maxLength = 150,data_toggle = "tooltip", title = "Max 150 characters", @class = "form-control " })
                                    @Html.ValidationMessageFor(m => m.ReferenceBrand, ResourceNames.NPD)
                                </div>
                            </div>
                        </div>
                    </div>

                </div>


                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="OnModelSubmit(this.form.id)">@Html.ResourceValue("Button_Text_Save", ResourceNames.Common)</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        @Html.ResourceValue("Button_Text_Close", ResourceNames.Common)
                    </button>
                </div>
            }
        </div>

    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#addeditProductFeatureModel").modal().on('shown.bs.modal', function () {
            BindValidation();
            $.validator.unobtrusive.parsePopup("#addeditProductFeatureModel");
            
        });
    });
</script>



